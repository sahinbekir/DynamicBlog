@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Dynamic Blog With Asp.Net Core</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="utf-8">
	<meta name="keywords" content="Weblog a Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, 
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<link href="~/DynamicBlog/css/bootstrap.css" rel='stylesheet' type='text/css' />
	<link rel="stylesheet" href="~/DynamicBlog/css/single.css">
	<link href="~/DynamicBlog/css/style.css" rel='stylesheet' type='text/css' />
	<link href="~/DynamicBlog/css/fontawesome-all.css" rel="stylesheet">
	<link href="http://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
	    rel="stylesheet">
</head>
	
<body>
	<!--Header-->
	<header>
		<div class="top-bar_sub_w3layouts container-fluid">
			<div class="row">
				<!--Logo and Project Name-->
				<div class="col-md-4 logo text-left">
					<a class="navbar-brand" href="~/Writer/Index/">
						<i class="fab fa-linode"></i> DynamicBlog</a>
				</div>
				@await Html.PartialAsync("Welcome")
				

					@await Html.PartialAsync("Social")
				
			</div>
		</div>

		@await Html.PartialAsync("Menu")
	</header>
	<!--//header-->

	<!--/main-->
	<br />
	@RenderBody()
	<br /><br /><br />
	<!--/main-->
	<!--footer-->
	<footer>
		<div class="container">
			<div class="row">
				@await Html.PartialAsync("AboutUs")
				@await Component.InvokeAsync("BlogLast3Post")
				<!-- subscribe -->
				
				@await Html.PartialAsync("~/Views/NewsLetter/SubsMail.cshtml")
				<!-- //subscribe -->
			</div>
			<!-- footer -->
				@await Html.PartialAsync("Social2")
			

			<!-- //footer -->


		</div>
	</footer>
	<!---->

	<!-- js -->
	<script src="~/DynamicBlog/js/jquery-2.2.3.min.js"></script>
	<!-- //js -->
	<!--/ start-smoth-scrolling -->
	<script src="~/DynamicBlog/js/move-top.js"></script>
	<script src="~/DynamicBlog/js/easing.js"></script>
	<script>
		jQuery(document).ready(function ($) {
			$(".scroll").click(function (event) {
				event.preventDefault();
				$('html,body').animate({
					scrollTop: $(this.hash).offset().top
				}, 900);
			});
		});
	</script>
	<!--// end-smoth-scrolling -->

	<script>
		$(document).ready(function () {

			$().UItoTop({
				easingType: 'easeOutQuart'
			});

		});
	</script>
	<a href="#home" class="scroll" id="toTop" style="display: block;">
		<span id="toTopHover" style="opacity: 1;"> </span>
	</a>

	<script src="~/DynamicBlog/js/bootstrap.js"></script>

</body>
</html>
