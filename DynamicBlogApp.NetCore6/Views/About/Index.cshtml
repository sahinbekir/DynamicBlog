@using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<body>
	<section class="main-content-w3layouts-agileits">
		<div class="container">
		<!---728x90--->

			<h3 class="tittle">About</h3>
			<!---728x90--->
			<div class="row inner-sec">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					<div class="blog-grid-top">
						@foreach (var item in Model)
						{
						<div class="blog_info_left_grid">
							<a href="">
								<img src="@item.AboutImage2" class="img-fluid" alt="">
							</a>
						</div>
						<h3>
							@item.AboutDetails1
						</h3>
						
							<p>@item.AboutDetails2</p>
						
						
						<a href="/Contact/Index/" class="btn btn-primary read-m">Read More</a>
						}
					</div>
					
				</div>
				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						<div class="tech-btm">
							<img src="~/DynamicBlog/images/banner1.jpg" class="img-fluid" alt="">
						</div>
						@await Html.PartialAsync("~/Views/NewsLetter/SubsMail.cshtml")
						@await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")
						
						<div class="tech-btm">
							<h4>Recent Posts</h4>

							@await Component.InvokeAsync("ThisWriterBlogs")
						</div>
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>
	<!--//main-->
<!---728x90--->


</body>

</html>