<!--Add Comment-->
<div class="comment-top">
    <h4>Leave a Comment</h4>
    <div class="comment-bottom">
        <form action="~/Comment/AddComment/" method="post">
            <input class="form-control" type="text" name="CommentTitle" placeholder="Comment Title" required="">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Name" required="">
            <input class="form-control" type="email" name="CommentMail" placeholder="Mail" required="">

            @*<input class="form-control" type="text" name="CommentContent" placeholder="Content" required="">*@
            <input class="form-control" type="text" name="BlogScore" placeholder="Score(1-10)" required="">
            <textarea class="form-control" name="CommentContent" placeholder="Message..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Submit</button>
        </form>
    </div>
</div>