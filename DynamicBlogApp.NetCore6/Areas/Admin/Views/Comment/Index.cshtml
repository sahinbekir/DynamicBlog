@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<body>
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>All Comment List  </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>


                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Blog Title</th>
                                    <th>Commenter</th>
                                    <th>Comment Title</th>
                                    <th>Comment Context</th>
                                    <th>Blog Score</th>
                                    <th>Date</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.CommentId</th>
                                        <td>@item.Blog.BlogTitle</td>



                                        <td>@item.CommentUserName</td>
                                        <td>@item.CommentTitle</td>
                                        <td>@item.CommentContent</td>
                                        @if (@item.BlogScore <= 5)
                                        {
                                            <td class="text-navy"> <i class="fa fa-level-down"></i> @item.BlogScore </td>
                                        }
                                        @if (@item.BlogScore > 5)
                                        {
                                            <td class="text-navy"> <i class="fa fa-level-up"></i> @item.BlogScore </td>
                                        }


                                        <td>@(((DateTime)item.CommentCreateDate).ToString("dd-MMM-yyyy"))</td>

                                        <td style="text-align:center"><a href="/Admin/DeleteComment/@item.CommentId"><i class="fa fa-times text-navy"></i></a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>