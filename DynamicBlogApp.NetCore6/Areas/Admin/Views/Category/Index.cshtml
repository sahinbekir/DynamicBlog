@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h1>Category List</h1>
<table class="table table-bordered">
    <tr>
        <th> # </th>
        <th> Category Name </th>
        <th> Update </th>
        <th> Delete </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/CategoryChange/@item.CategoryID/"  class="btn btn-warning">Update</a></td>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID/" id="DeleteBtn"
                onclick="return confirm('Are You Sure');" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Category Add</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}))
