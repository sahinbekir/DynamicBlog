@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "AllWriters";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<body>




    <h1 style="text-align:center"><b><strong>All Writer List</strong></b></h1>


    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">
                            
                            
                            
                                <a href="">
                                <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="">
                            </a>
                           
                            

                            <div class="product-desc">

                                <span class="product-price">
                                    @item.UserName

                                </span>
                                <h5 style="text-align:right"><small class="text-muted">@item.PhoneNumber</small></h5>
                                <a href="" class="product-name"> @item.NameSurname </a>



                                <div class="small m-t-xs">
                                    @item.Email
                                </div>
                                <div class="m-t text-righ">

                                    <a href="" class="btn btn-xs btn-outline btn-primary">Read Details <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>





