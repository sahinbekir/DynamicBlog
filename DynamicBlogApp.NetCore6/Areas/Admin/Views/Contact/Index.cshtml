@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




<body>
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>All Contact List  </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>


                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Contacter Name</th>
                                    <th>Contacter Mail</th>
                                    <th>Contact Subject</th>
                                    <th>Contact Context</th>
                                    <th>Contact Date</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.ContactID</th>
                                        <td>@item.ContactUserName</td>



                                        <td>@item.ContactMail</td>
                                        <td>@item.ContactSubject</td>
                                        <td>@item.ContactMessage</td>
                                        


                                        <td>@(((DateTime)item.ContactDate).ToString("dd-MMM-yyyy"))</td>

                                        <td style="text-align:center;"><a href="/Admin/DeleteContact/@item.ContactID"><i style="color:red;" class="fa fa-times text-navy"></i></a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

